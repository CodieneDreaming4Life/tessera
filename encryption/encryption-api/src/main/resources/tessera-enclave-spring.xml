<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean name="naclFactory" class="com.quorum.tessera.nacl.NaclFacadeFactory" factory-method="newFactory"/>



    <bean name="keyEncryptor" class="com.quorum.tessera.config.keys.KeyEncryptorImpl">
        <constructor-arg>
            <bean class="com.quorum.tessera.argon2.Argon2" factory-method="create"/>
        </constructor-arg>
        <constructor-arg>
            <bean factory-bean="naclFactory" factory-method="create"/>
        </constructor-arg>
    </bean>

    <bean id="keyConfig" factory-bean="config" factory-method="getKeys" />

    
    <bean id="enclaveFactory" class="com.quorum.tessera.encryption.EnclaveFactory" factory-method="create" />
    
    <bean id="enclave" factory-bean="enclaveFactory" factory-method="create">
        <constructor-arg>
            <bean factory-bean="keyPairConverter" factory-method="convert">
                <constructor-arg>
                    <bean factory-bean="keyConfig" factory-method="getKeyData"/>
                </constructor-arg>
            </bean>
        </constructor-arg>
        <constructor-arg>
            <bean class="com.quorum.tessera.encryption.KeyFactory" factory-method="convert">
                <constructor-arg>
                    <bean factory-bean="config" factory-method="getAlwaysSendTo" />
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>

</beans>
